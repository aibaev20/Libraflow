<div class="main-header">
<div class="main-header-logo">
  <!-- Logo Header -->
  <div class="logo-header" data-background-color="dark">
    <a asp-controller="Home" asp-action="Index" class="logo">
      <img
        src="~/img/libraflow-logo.svg"
        alt="navbar brand"
        class="navbar-brand"
        height="20"
      />
    </a>
    <div class="nav-toggle">
      <button class="btn btn-toggle toggle-sidebar">
        <i class="gg-menu-right"></i>
      </button>
      <button class="btn btn-toggle sidenav-toggler">
        <i class="gg-menu-left"></i>
      </button>
    </div>
    <button class="topbar-toggler more">
      <i class="gg-more-vertical-alt"></i>
    </button>
  </div>
  <!-- End Logo Header -->
</div>

<!-- Navbar Header -->
<nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
  <div class="container-fluid">
    <ul class="navbar-nav topbar-nav ms-md-auto align-items-center">

      <li class="nav-item topbar-user dropdown hidden-caret">
        <a
          class="dropdown-toggle profile-pic"
          data-bs-toggle="dropdown"
          href="#"
          aria-expanded="false"
        >
          <img
              src="~/img/user-icon.svg"
              alt="..."
              height="25"
            />
          
          <span class="profile-username">
            <span class="op-7">Hi,</span>
            <span class="fw-bold">@User.Identity?.Name</span> <!-- show named of logged in admin -->
          </span>
        </a>
        <ul class="dropdown-menu dropdown-user animated fadeIn">
          <div class="dropdown-user-scroll scrollbar-outer">
            <li>
              <div class="user-box">
                <img
                  src="~/img/user-icon.svg"
                  alt="..."
                  height="45"
                />
                <div class="u-text">
                  <p class="text-muted">@User.Identity?.Name</p>
                </div>
              </div>
            </li>
            <li>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Authentication">Change Password</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item">
                <form asp-action="Logout" asp-controller="Authentication">
                   <button class="btn btn-danger" type="submit"> @T.LogoutButtonText </button>
                </form>
              </a>
            </li>
          </div>
        </ul>
      </li>
    </ul>
  </div>
</nav>
</div>