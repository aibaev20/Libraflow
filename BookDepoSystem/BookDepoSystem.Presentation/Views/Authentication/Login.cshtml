@using System.Net.Http
@using BookDepoSystem.Presentation.Extensions

@model LoginViewModel
@{
    Layout = "_AuthLayout";
    var globalError = this.ViewContext.ModelState.GetFirstGlobalError();
}
<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">@T.LoginTitle</h1>
</div>

@if (!string.IsNullOrWhiteSpace(globalError))
{
    <span class="d-block text-small alert alert-danger">
        @globalError
    </span>
}

<form class="user" asp-action="Login" method="post">
    <div class="form-group">
        <input asp-for="Email"
               class="form-control"
               aria-describedby="emailHelp"
               placeholder="@T.EmailPlaceholderText">
        <span class="text-danger text-small" asp-validation-for="Email"></span>
        <!-- using asp-validation-for to show validation -->
    </div>
    
    <div class="form-group">
        <input asp-for="Password"
               type="password"
               class="form-control"
               placeholder="@T.PasswordPlaceholderText">
        <span class="text-danger text-small" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox small">
            <input 
                type="checkbox"
                class="custom-control-input"
                asp-for="RememberMe">
            <label class="custom-control-label" asp-for="RememberMe">@T.RememberMeLabel</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-user btn-block">
        @T.LoginButtonText
    </button>
</form>
<hr>
<div class="text-center">
    <a class="small" href="@Url.Action("ForgotPassword")">@T.ForgotPasswordLinkText</a>
</div>