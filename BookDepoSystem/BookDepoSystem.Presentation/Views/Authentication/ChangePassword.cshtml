@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "_Layout";
}

<h2 class="form-group">@T.ResetPasswordTitle</h2>

@*@if (ViewBag.Message != null)
{
    <div class="d-block alert alert-success">
        @ViewBag.Message
    </div>
}*@

@if (TempData.ContainsKey("MessageText"))
{
    <span class="d-block alert alert-@TempData["MessageVariant"]">
        @TempData["MessageText"]
    </span>
}

<form asp-action="ChangePassword" method="post">
    <div class="form-group">
        <label asp-for="CurrentPassword">@T.CurrentPasswordPlaceholderText</label>
        <input asp-for="CurrentPassword"
               class="form-control"
               type="password"
               placeholder="@T.CurrentPasswordPlaceholderText"/>
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword">@T.NewPasswordPlaceholderText</label>
        <input asp-for="NewPassword"
               class="form-control"
               type="password"
               placeholder="@T.NewPasswordPlaceholderText"/>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">@T.ConfirmNewPasswordPlaceholderText</label>
        <input asp-for="ConfirmPassword"
               class="form-control"
               type="password"
               placeholder="@T.ConfirmNewPasswordPlaceholderText"/>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@T.ResetPasswordButtonText</button>
    </div>
</form>