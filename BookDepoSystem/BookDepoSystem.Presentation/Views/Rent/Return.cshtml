@model RentViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new tempusDominus.TempusDominus(document.getElementById("returnDatePicker"), {
                localization: {
                    format: 'dd-MM-yyyy HH:mm', // Customize format
                },
                display: {
                    sideBySide: true, // Show date & time picker together
                    icons: {
                        time: "bi bi-clock",
                        date: "bi bi-calendar",
                        up: "bi bi-arrow-up",
                        down: "bi bi-arrow-down",
                    },
                },
            });
        });
    </script>
}

<h2>Return Book</h2>

<form asp-controller="Rent" asp-action="Return" method="post">
    <input type="hidden" asp-for="RentId" />
    <input type="hidden" asp-for="RentDate" />
    <input type="hidden" asp-for="DueDate" />
    <input type="hidden" asp-for="BookId" />
    <input type="hidden" asp-for="RenterId" />

    <div class="form-group">
        <label>Book</label>
        <input type="text" class="form-control" value="@Model.BookTitle" disabled />
    </div>

    <div class="form-group">
        <label>Renter</label>
        <input type="text" class="form-control" value="@Model.RenterName" disabled />
    </div>

    <div class="form-group">
        <label asp-for="ReturnDate">Return Date</label>
        <div class="input-group" id="returnDatePicker" data-td-target-input="nearest" data-td-target-toggle="nearest">
            <input type="text" class="form-control" asp-for="ReturnDate" data-td-target="#returnDatePicker"/>
            <span class="input-group-text" data-td-toggle="datetimepicker">
            <i class="bi bi-calendar"></i>
        </span>
        </div>
    </div>

    <div class="form-group">
        <label>Rent Date</label>
        <input type="datetime-local" class="form-control" @(Model.RentDate.ToString("dd-MM-yyyy HH:mm")) disabled />
    </div>

    <div class="form-group">
        <label>Due Date</label>
        <input type="datetime-local" class="form-control" @(Model.DueDate.ToString("dd-MM-yyyy HH:mm")) disabled />
    </div>


    <button type="submit" class="btn btn-success">Confirm Return</button>
</form>