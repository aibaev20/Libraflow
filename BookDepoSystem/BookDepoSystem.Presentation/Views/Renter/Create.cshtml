@model BookDepoSystem.Presentation.Models.RenterViewModel

@{
    ViewData["Title"] = "Add New Renter";
}

<h2 class="m-3">@T.CreateRenterTitle</h2>

<form asp-action="Create" asp-controller="Renter" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">@T.RenterNameText</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">@T.RenterEmailText</label>
        <input asp-for="Email" type="email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">@T.RenterPhoneNumberText</label>
        <input asp-for="PhoneNumber" class="form-control"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">@T.CreateButtonText</button>
        <a asp-action="Renters" class="btn btn-secondary">@T.BackButtonText</a>
    </div>
</form>
